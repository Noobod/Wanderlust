<% layout("/layouts/boilerplate") %>

<div
  id="filters"
  class="container-fluid d-flex flex-wrap align-items-center gap-4 py-3 px-2 overflow-auto"
>
  <div class="filter d-flex flex-column align-items-center">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter d-flex flex-column align-items-center">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter d-flex flex-column align-items-center">
    <div><i class="fa-solid fa-city"></i></div>
    <p>Iconic Cities</p>
  </div>
  <div class="filter d-flex flex-column align-items-center">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter d-flex flex-column align-items-center">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </div>
  <div class="filter d-flex flex-column align-items-center">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing Pools</p>
  </div>
  <div class="filter d-flex flex-column align-items-center">
    <div><i class="fa-solid fa-tents"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter d-flex flex-column align-items-center">
    <div><i class="fa-solid fa-tractor"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter d-flex flex-column align-items-center">
    <div><i class="fa-solid fa-person-skiing"></i></div>
    <p>Arctic</p>
  </div>
  <div class="filter d-flex flex-column align-items-center">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beach</p>
  </div>
  <div class="filter d-flex flex-column align-items-center">
    <div><i class="fa-solid fa-igloo"></i></div>
    <p>Domes</p>
  </div>
  <div class="filter d-flex flex-column align-items-center">
    <div><i class="fa-solid fa-ferry"></i></div>
    <p>Boats</p>
  </div>

  <div class="tax-toggle ms-lg-5 mt-3">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault">
        Display total after taxes
      </label>
    </div>
  </div>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 mt-4 g-4 px-3">
  <% for(let listing of allListings) { %>
  <div class="col">
    <a
      href="/listings/<%= listing._id %>"
      class="text-decoration-none text-dark"
    >
      <div class="card h-100 shadow-sm rounded-3 listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top img-fluid"
          alt="listing_image"
          style="object-fit: cover; height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br />
            &#65;&#36; <%= listing.price.toLocaleString("en-AU") %> / night
            <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
  </div>
  <% } %>
</div>

