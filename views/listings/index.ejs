<% layout("/layouts/boilerplate") %>

<div id="filters">
  <!-- Filters remain same -->
  <% const filters = [
    { icon: "fa-fire", text: "Trending" },
    { icon: "fa-bed", text: "Rooms" },
    { icon: "fa-city", text: "Iconic Cities" },
    { icon: "fa-mountain-city", text: "Mountains" },
    { icon: "fa-fort-awesome", text: "Castles" },
    { icon: "fa-person-swimming", text: "Amazing Pools" },
    { icon: "fa-tents", text: "Camping" },
    { icon: "fa-tractor", text: "Farms" },
    { icon: "fa-person-skiing", text: "Arctic" },
    { icon: "fa-umbrella-beach", text: "Beach" },
    { icon: "fa-igloo", text: "Domes" },
    // { icon: "fa-ferry", text: "Boats" },
  ]; %>
  <% filters.forEach(f => { %>
    <div class="filter">
      <div><i class="fa-solid <%= f.icon %>"></i></div>
      <p><%= f.text %></p>
    </div>
  <% }); %>
</div>

<div class="tax-toggle">
  <div class="form-check-reverse form-switch">
    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault"/>
    <label class="form-check-label" for="switchCheckDefault">
      Display total after taxes
    </label>
  </div>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3">
  <% allListings.forEach(listing => { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing_image"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br />
              &#65;&#36; <%= listing.price.toLocaleString("en-AU") %> / night
              <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% }); %>
</div>
